<Page
    x:Class="ImgurUploader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImgurUploader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF121211">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ContentControl x:Name="UploadForm" Margin="0,8,0,8">
                <StackPanel>
                    <Image Source="Assets/imgur.gif" Stretch="None" Margin="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <TextBlock Text="File" Width="100" Style="{StaticResource ItemTextStyle}"/>
                        <TextBox x:Name="FilePath" Text="No file selected." IsReadOnly="True" IsEnabled="False" VerticalAlignment="Center" HorizontalAlignment="Center" Width="217"/>
                        <Button x:Name="BrowseButton" Content="Browse" Click="Browse_Click" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <TextBlock Text="Title" Width="100" Style="{StaticResource ItemTextStyle}"/>
                        <TextBox x:Name="TitleInput" Width="300" HorizontalAlignment="Left" ToolTipService.ToolTip="Image Title" MaxLength="128"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <TextBlock Text="Description" Width="100" Style="{StaticResource ItemTextStyle}"/>
                        <TextBox x:Name="DescriptionInput" Width="300" Height="100" HorizontalAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="65536"/>
                    </StackPanel>
                    <Button x:Name="UploadButton" Content="Upload" Click="Upload_Click" HorizontalAlignment="Stretch" Foreground="White" Background="#FF89C624" IsEnabled="False" Height="48"/>
                    <Button x:Name="ShinyButton" Content="Do Things" Click="ShinyButton_Click" HorizontalAlignment="Stretch" Foreground="White" Background="#FFC62424" Height="48"/>
                </StackPanel>
            </ContentControl>
            <ProgressBar x:Name="UploadProgressBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="UploadStatus" Style="{StaticResource SubtitleTextStyle}"/>
            <StackPanel x:Name="UploadResult" Orientation="Horizontal" Visibility="Collapsed" Margin="0,8,0,8">
                <TextBlock Text="Image URL:" Width="100" Style="{StaticResource ItemTextStyle}"/>
                <TextBox x:Name="ImageUrl" Width="300" IsReadOnly="True" GotFocus="ImageUrl_GotFocus" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
